<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MethodExtensionActivity"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/drawerExtension">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"/>
        <ProgressBar
            android:id="@+id/progressRefreshActivity"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-4dp"
            android:indeterminateOnly="true"
            android:visibility="invisible"/>
        <EditText
            android:id="@+id/expressionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            android:maxLines="1"
            android:hint="@string/hint_expression"
            android:background="@drawable/focusable_input"
            android:importantForAutofill="no" />
        <TextView
            android:id="@+id/expressionTextView"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="40dp"/>
        <ImageView
            android:id="@+id/loadImageInternet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navExtension"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_method_extension_drawer"/>
</androidx.drawerlayout.widget.DrawerLayout>