<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layoutDirection="rtl">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/imageMethodLayout">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="dropdown_menu"
            android:layout_marginHorizontal="35dp"
            app:boxBackgroundMode="outline"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_marginTop="12dp"
            android:hint="@string/hint_move_list_app">
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="1"
                android:id="@+id/edtSearchMovie"
                tools:ignore="LabelFor" />
        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:paddingVertical="4dp">
            <ImageButton
                android:id="@+id/btnDoneUrl"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_done"
                android:background="@drawable/background_round_image_button"
                android:tint="@color/gray100"
                android:contentDescription="@null"/>
            <ImageButton
                android:id="@+id/btnStorageImage"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_storage"
                android:background="@drawable/background_round_image_button"
                android:tint="@color/gray100"
                android:contentDescription="@null"
                android:layout_marginStart="4dp"/>
            <ImageButton
                android:id="@+id/btnUrlImgWebView"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_web_view"
                android:background="@drawable/background_round_image_button"
                android:tint="@color/gray100"
                android:contentDescription="@null"
                android:layout_marginStart="4dp"/>
            <ImageButton
                android:id="@+id/btnClearUrl"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:src="@drawable/ic_close"
                android:background="@drawable/background_round_image_button"
                android:tint="@color/gray100"
                android:contentDescription="@null"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/loadImageInternet"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginVertical="8dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/progressRefreshCenter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_gravity="center"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>