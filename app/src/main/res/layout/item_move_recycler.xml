<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="@color/gray100"
    app:cardCornerRadius="4dp">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layoutDirection="ltr">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/pictureFromMove"
                android:layout_width="124dp"
                android:layout_height="124dp"
                app:shapeAppearanceOverlay="@style/ShapeCircleImageView"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textNameMove"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/move_name"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/pictureFromMove"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textNameDirector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/name_director"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/pictureFromMove"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNameMove" />
            <TextView
                android:id="@+id/textYearOfConstruction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/year_of_construction"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/pictureFromMove"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textNameDirector"/>
            <TextView
                android:id="@+id/textNameAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/name_author"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@+id/pictureFromMove"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textYearOfConstruction"/>
            <TextView
                android:id="@+id/textShortDescription"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:gravity="center_vertical|start"
                android:singleLine="true"
                android:textDirection="rtl"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pictureFromMove"
                android:layout_marginStart="50dp" />
            <ImageButton
                android:id="@+id/btnExpandableButton"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/background_ripple_circle_pink"
                android:src="@drawable/ic_arrow_up"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:contentDescription="@null"
                app:layout_constraintTop_toBottomOf="@+id/pictureFromMove"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <TextView
            android:id="@+id/textFullDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            tools:targetApi="o"
            android:visibility="gone"
            android:paddingVertical="4dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginVertical="4dp"
            android:textDirection="rtl"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.cardview.widget.CardView>